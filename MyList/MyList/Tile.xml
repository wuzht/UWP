<?xml version="1.0" encoding="utf-8" ?>
<tile>
  <visual branding="nameAndLogo" displayName="MyList">

    <binding template="TileSmall" >
      <image placement="background" src="Assets/Pics/1.jpg" />
      <text hint-style="caption" hint-align="left"></text>
      <text hint-style="captionsubtle" hint-align="left" hint-wrap="true"></text>
    </binding>

    <binding template="TileMedium">
      <image placement="background" src="Assets/Pics/2.jpg"/>
      <group>
        <subgroup>
          <text hint-style="caption" hint-align="left">1</text>
          <text hint-style="captionsubtle" hint-align="left" hint-wrap="true"></text>
        </subgroup>
      </group>
    </binding>

    <binding template="TileWide">
      <image placement="background" src="Assets/Pics/3.jpg"/>
      <group>
        <subgroup>
          <image hint-align="stretch" src="ms-appx:///Assets/Pics/4.jpg"/>
        </subgroup>
        <subgroup>
          <text hint-style="caption" hint-align="left"></text>
          <text hint-style="captionsubtle" hint-align="left" hint-wrap="true"></text>
        </subgroup>
      </group>
    </binding>

    <binding template="TileLarge">
      <image src="Assets/Pics/1.jpg" placement="background"/>
      <text hint-style="caption" hint-align="left"></text>
      <text hint-style="captionsubtle" hint-align="left" hint-wrap="true"></text>
    </binding>

  </visual>
</tile>

